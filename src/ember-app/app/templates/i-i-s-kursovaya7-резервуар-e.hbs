<h3 class="ui header">{{t "forms.i-i-s-kursovaya7-резервуар-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.колвоТоп
      class=(if (v-get validationModel "колвоТоп" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-резервуар-e.колвоТоп-caption")
      data-test-i-i-s-kursovaya7-резервуар-e-колвоТоп=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "колвоТоп" "message")}}
  </div>
  <div class="field" data-test-i-i-s-kursovaya7-резервуар-e-состояние="true">
    <label>{{t "forms.i-i-s-kursovaya7-резервуар-e.состояние-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-kursovaya7-состояния")
      value=model.состояние
      class=(if (v-get validationModel "состояние" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "состояние" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.idР
      class=(if (v-get validationModel "idР" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-резервуар-e.idР-caption")
      data-test-i-i-s-kursovaya7-резервуар-e-idР=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "idР" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya7-резервуар-e.остаток-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.остаток
      displayAttributeName="номер"
      autocomplete=true
      relationName="остаток"
      projection="ОстатокL"
      title=(t "forms.i-i-s-kursovaya7-резервуар-e.остаток-caption")
      readonly=readonly
      componentName="остатокLookup"
      class=(if (v-get validationModel "остаток" "isInvalid") "error")
      data-test-i-i-s-kursovaya7-резервуар-e-остаток=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "остаток" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.остаток.колво
      class=(if (v-get validationModel.остаток "колво" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-резервуар-e.остаток.колво-caption")
      data-test-i-i-s-kursovaya7-резервуар-e-остаток-колво=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.остаток "колво" "message")}}
  </div>
</form>
