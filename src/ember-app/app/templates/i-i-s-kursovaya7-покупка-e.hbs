<h3 class="ui header">{{t "forms.i-i-s-kursovaya7-покупка-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.сумма
      class=(if (v-get validationModel "сумма" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-покупка-e.сумма-caption")
      data-test-i-i-s-kursovaya7-покупка-e-сумма=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сумма" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.количество
      class=(if (v-get validationModel "количество" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-покупка-e.количество-caption")
      data-test-i-i-s-kursovaya7-покупка-e-количество=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "количество" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya7-покупка-e.базаКлиента-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.базаКлиента
      relationName="базаКлиента"
      projection="БазаКлиентаL"
      title=(t "forms.i-i-s-kursovaya7-покупка-e.базаКлиента-caption")
      readonly=readonly
      componentName="базаКлиентаLookup"
      class=(if (v-get validationModel "базаКлиента" "isInvalid") "error")
      data-test-i-i-s-kursovaya7-покупка-e-базаКлиента=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "базаКлиента" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.базаКлиента.логин
      class=(if (v-get validationModel.базаКлиента "логин" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-покупка-e.базаКлиента.логин-caption")
      data-test-i-i-s-kursovaya7-покупка-e-базаКлиента-логин=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.базаКлиента "логин" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya7-покупка-e.остаток-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.остаток
      relationName="остаток"
      projection="ОстатокL"
      title=(t "forms.i-i-s-kursovaya7-покупка-e.остаток-caption")
      readonly=readonly
      componentName="остатокLookup"
      class=(if (v-get validationModel "остаток" "isInvalid") "error")
      data-test-i-i-s-kursovaya7-покупка-e-остаток=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "остаток" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.остаток.колво
      class=(if (v-get validationModel.остаток "колво" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-покупка-e.остаток.колво-caption")
      data-test-i-i-s-kursovaya7-покупка-e-остаток-колво=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.остаток "колво" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-kursovaya7-покупка-e.ценноваяСтела-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.ценноваяСтела
      relationName="ценноваяСтела"
      projection="ЦенноваяСтелаL"
      title=(t "forms.i-i-s-kursovaya7-покупка-e.ценноваяСтела-caption")
      readonly=readonly
      componentName="ценноваяСтелаLookup"
      class=(if (v-get validationModel "ценноваяСтела" "isInvalid") "error")
      data-test-i-i-s-kursovaya7-покупка-e-ценноваяСтела=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ценноваяСтела" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.ценноваяСтела.наименование
      class=(if (v-get validationModel.ценноваяСтела "наименование" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-покупка-e.ценноваяСтела.наименование-caption")
      data-test-i-i-s-kursovaya7-покупка-e-ценноваяСтела-наименование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.ценноваяСтела "наименование" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.ценноваяСтела.цена
      class=(if (v-get validationModel.ценноваяСтела "цена" "isInvalid") "error")
      label=(t "forms.i-i-s-kursovaya7-покупка-e.ценноваяСтела.цена-caption")
      data-test-i-i-s-kursovaya7-покупка-e-ценноваяСтела-цена=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.ценноваяСтела "цена" "message")}}
  </div>
</form>
